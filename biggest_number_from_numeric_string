#include<iostream>
#include<string>
#include<algorithm>
using namespace std;
int main()
{
    string str,a="";
    cin>>str;
    sort(str.begin(),str.end());
    for(int i=0;i<str.size();i++){
        a=str.at(i)+a;
    }
    cout<<a<<endl;
    sort(str.begin(),str.end(),greater<int>());
    cout<<str;
    return 0;
}
